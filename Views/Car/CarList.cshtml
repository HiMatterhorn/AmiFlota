@model IEnumerable<AmiFlota.Models.CarModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List of the cars</title>
</head>
<body>
    <div class="card-deck">

        <div class="row">
            @foreach (var car in Model)
            {
                var photoPath = "/images/cars/" + (car.PhotoPath ?? "noimage") + ".jpg";


                <div class="card box-shadow" style="max-width: 30%; height: 300px">
                    <img class="" src="@photoPath">

                    <div class="card-body">
                        <h5 class="card-title">@car.Brand + @car.Model </h5>
                        <p class="card-text">
                            Registration number: @car.RegistrationNumber <br>
                            Number of seats: @car.SeatsNumber
                        </p>
                        @*<a href="#" class="btn btn-primary">Show details</a>*@
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@car.VIN">Show details</a>
                    </div>
                </div>

            }
        </div>
        </div>
</body>
</html>
