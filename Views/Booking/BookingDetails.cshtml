@model AmiFlota.Models.ViewModels.BookingVM

<div class="row text-center">
    <h2>Booking detailed information</h2>
</div>

<div class="form-group row">
    <h4>@Model.Booking.CarVIN</h4>
</div>
<div class="form-group row">
    <h4>@Model.Booking.BookingUser</h4>
</div>

<form method="post" asp-controller="Booking" asp-action="BookingDetails" id="bookingDetailsForm">
    <input asp-for="Booking.CarVIN">Model.Booking.CarVIN</>
        <input asp-for="Booking.BookingUser">Model.Booking.BookingUser</>

        <input asp-for="Booking.StartDate"> Model.Booking.StartDate </>
        <input asp-for="Booking.EndDate"> Model.Booking.EndDate </>

    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Booking.Destination">Destination</label>
            <input asp-for="Booking.Destination" class="form-control" id="Booking.Destination"></>
        </div>
        <div class="form-group">
            <label asp-for="Booking.ProjectCost">Project:</label>
            <input asp-for="Booking.ProjectCost" class="form-control" id="Booking.ProjectCost"></>
        </div>

        <div class="row">
            <button type="submit" id="btnBookDetails" class="btn btn-success">Book</button> &nbsp; <!--space-->
        </div>
    </div>
</form>