@model AmiFlota.Models.BookingModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search for available car</title>
</head>
<body>

    @*//TODO Rewaork it to search partial view*@
    <form method="post" asp-action="Search" asp-controller="Booking">
        <div class="row text-center">
            <h2>Booking dates</h2>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label for="bookingStartDate">Start Date</label>
                <input class="form-control" id="bookingStartDate" style="width: 100%;">
            </div>
            <div class="col-md-4">
                <label for="bookingEndDate">End Date</label>
                <input class="form-control" id="bookingEndDate" style="width: 100%;">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <button type="button" id="btnSearch" class="btn btn-outline-info" onclick="onSearch();">Search</button>
            </div>
        </div>
    </form>


    @*  //TODO Present available cars in partial view *@
    @*    <div id="_FilteredCarsView"> </div>*@

    <footer>
        <div class="text-right pt-2">
            <p>Confirmation email will be sent to: @HttpContextAccessor.HttpContext.Session.GetString("userEmailAssigned")</p>
        </div>
    </footer>

</body>
</html>

